<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/editImg2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_account_balance_24"/>

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toStartOf="@+id/editImg3"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/editImg2">


            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/titleTxtAmount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/titleTxt"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toStartOf="@+id/editImg3"
            android:orientation="horizontal"
            android:layout_below="@+id/relative1"
            android:layout_toEndOf="@+id/editImg2">


            <TextView
                android:id="@+id/titleTxtDate"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/titleTxtpaid"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Title"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>



        <ImageView
            android:id="@+id/editImg3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:layout_marginEnd="1dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/background_markasunread_shape_spc"/>



                </RelativeLayout>


            </RelativeLayout>